<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@color/deepPurple5"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_height="fill_parent">


    <Button
        android:id="@+id/btnTakePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"

        android:width="200dp"
        android:background="@color/deepPurple2"
        android:drawableLeft="@drawable/ic_menu_camera"
        android:onClick="btnTakePhotoClicked"
        android:text="Ambil Gambar"
        android:textColor="@color/deepPurple5" />

    <Button
        android:id="@+id/btntulis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/btnExit"
        android:layout_alignStart="@+id/btnExit"
        android:layout_below="@+id/btnTakePhoto"
        android:layout_marginTop="18dp"
        android:width="200dp"
        android:background="@color/deepPurple2"
        android:drawableLeft="@drawable/pencil"
        android:onClick="btnTakePhotoClicked"
        android:text="Tulis Komentar"
        android:textColor="@color/deepPurple5" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnTakePhoto"
        android:layout_alignStart="@+id/btnTakePhoto"
        android:layout_below="@+id/btnTakePhoto"
        android:layout_marginTop="91dp"
        android:width="200dp"
        android:background="@color/deepPurple4"
        android:onClick="btnExitClicked"
        android:text="Batal"
        android:textColor="@color/black" />
</RelativeLayout>