<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>

            <!-- Gradient digunakan untuk Membentuk Warna Gradient, dan itu bisa di bentuk dari 2 atau pun 3 warna. -->
            <gradient
                android:startColor="#BF00FF"
                android:endColor="#8F00FF"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#2f6699" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>