<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color"
    android:orientation="vertical"
    tools:context=".fotokomen">

    <ImageView
        android:id="@+id/display_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="5dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/text_view_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="#809575CD"
        android:gravity="center"
        android:text="Komentar"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/txt_komen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/table_row"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:background="@color/BlueGrey50"
        android:ems="10"
        android:hint="Tulis Komentar"
        android:inputType="textLongMessage"
        android:textColor="@color/black" />

    <TableRow
        android:id="@+id/table_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="2">

        <Button
            android:id="@+id/btnback"
            android:layout_height="50dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/deepPurple4"
            android:onClick="btnDeleteOnClick"
            android:text="Kembali"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnsend"
            android:layout_height="50dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@color/deepPurple4"
            android:onClick="btnBackOnClick"
            android:text="Kirim"
            android:textColor="@color/white" />
    </TableRow>
</RelativeLayout>
